<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bitdance.giveortake"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.bitdance.giveortake.FreeItemsActivity"
            android:label="@string/free_items_title" >

        </activity>
        <activity
                android:name="com.bitdance.giveortake.OffersActivity"
                android:label="@string/offers_title" >

        </activity>
        <activity
                android:name="com.bitdance.giveortake.ProfileActivity"
                android:label="@string/profile_title" >

        </activity>

        <service android:name="com.bitdance.giveortake.ItemService" />

        <activity
            android:name=".MainTabActivity"
            android:label="@string/title_activity_tab" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>
